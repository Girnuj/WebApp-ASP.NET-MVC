@model WebApplication1.Models.Autores

@{
    ViewBag.Title = "Create";
}


<h2>Crear</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Nuevo Autor</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="row">

                <div class="col-md-6">
                    @Html.LabelFor(model => model.AutoresNombre, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.AutoresNombre, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.AutoresNombre, "", new { @class = "text-danger" })
                </div>




                <div class="col-md-6">
                    @Html.LabelFor(model => model.AutoresApellido, htmlAttributes: new { @class = "control-label" })
                     @Html.EditorFor(model => model.AutoresApellido, new { htmlAttributes = new { @class = "form-control" } }) 
                    @*<input type="text" onkeypress='return event.charCode >= 48 && event.charCode <= 57' class="form-control" name="AutoresApellido" />*@
                    @Html.ValidationMessageFor(model => model.AutoresApellido, "", new { @class = "text-danger" })
                </div>

            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Crear" class="btn btn-success" /> |
                <input type="button" value="Volver a la lista" onclick="history.back()" class="btn btn-outline-info" />
            </div>
        </div>
    </div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Styles.Render("~/Content/Site.css")

}
