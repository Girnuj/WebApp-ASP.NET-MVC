@model WebApplication1.Models.Secciones

@{
    ViewBag.Title = "Edit";
}


<h2>Editar</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Secciones</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.seccionesID)

        <div class="form-group">
            @Html.DisplayNameFor(model => model.seccionesNombre)
            <div class="col-md-10">
                @Html.EditorFor(model => model.seccionesNombre, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.seccionesNombre, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-success" /> |
                <input type="button" value="Volver a la lista" onclick="history.back()" class="btn btn-outline-info" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Styles.Render("~/Content/Site.css")
    @Scripts.Render("~/bundles/modernizr")

}

